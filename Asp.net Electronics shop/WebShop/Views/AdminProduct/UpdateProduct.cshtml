@model WebShop.Models.AdminProductModel
@{
    ViewBag.Title = "Update Category";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="col-sm-12 text-center admin-header">
    <h3><b>Administration</b></h3>
</div>
<div class="row">
    <div class="col-md-3">
        @Html.Partial("_AdminPartial")
    </div>
    <div class="col-md-9">
        <div class="row mbox">
            <div class="mform">
                @using (Html.BeginForm("UpdateProduct", "AdminProduct", new { id = ViewBag.mid }, FormMethod.Post, new { enctype = "multipart/form-data", @class = "form", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    <div class="form-group">
                        @Html.LabelFor(s => s.Name, new { @class = "control-label" })
                        @Html.TextBoxFor(s => s.Name, new { @class = "form-control", @Value = ViewBag.name, placeholder = "Product name" })
                        @Html.ValidationMessageFor(s => s.Name, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(s => s.Price, new { @class = "control-label" })
                        @Html.TextBoxFor(s => s.Price, new { @class = "form-control", @Value = ViewBag.price, placeholder = "Product price" })
                        @Html.ValidationMessageFor(s => s.Price, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(s => s.Discount, new { @class = "control-label" })
                        @Html.TextBoxFor(s => s.Discount, new { @class = "form-control", @Value = ViewBag.discount, placeholder = "Product discount" })
                        @Html.ValidationMessageFor(s => s.Discount, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(u => u.Image)
                        @Html.TextBoxFor(u => u.Image, new { type = "file", @class = "btn btn-sm btn-default fileinput-button" })
                        @Html.ValidationMessageFor(u => u.Image, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(s => s.CategoryID, new { @class = "control-label" })
                        @Html.DropDownListFor(s => s.CategoryID, new SelectList(ViewBag.Categories, "Value", "Text", @ViewBag.catID), new { @class = "form-control" })
                        @Html.ValidationMessageFor(s => s.CategoryID, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(s => s.SupplierID, new { @class = "control-label" })
                        @Html.DropDownListFor(s => s.SupplierID, new SelectList(ViewBag.Suppliers, "Value", "Text", @ViewBag.supID), new { @class = "form-control" })
                        @Html.ValidationMessageFor(s => s.SupplierID, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group"><img class="simg" alt="@ViewBag.name" src="~/Content/Images/products/@ViewBag.url" /></div>
                    <div><button id ="btn_update_product" type="submit" class="btn mpbtn btn-block btn-sm btn-primary">Update</button></div>
                }
                @if (ViewBag.Status != null)
                {
                    //Display the error message
                    @ViewBag.Status
                }
            </div>
        </div>

    </div>
</div>


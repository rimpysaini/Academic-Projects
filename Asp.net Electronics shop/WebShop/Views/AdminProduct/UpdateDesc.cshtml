@model WebShop.Models.DescriptionModel
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="col-sm-12 text-center admin-header">
    <h3><b>Administration</b></h3>
</div>
<div class="row">
    <div class="col-md-3">
        @Html.Partial("_AdminPartial")
    </div>
    <div class="col-md-9">
        <div class="row mbox">
            <div clas="row>">
                <div class="mform">
                    @using (Html.BeginForm("UpdateDesc", "AdminProduct", new { id = ViewBag.ID }, FormMethod.Post, new { @class = "form", role = "form" }))
                    {
                        @Html.AntiForgeryToken()
                        <div class="form-group">
                            @Html.LabelFor(u => u.Heading, new { @class = "control-label" })
                            @Html.TextBoxFor(u => u.Heading, new { @class = "form-control", placeholder = "First name" })
                            @Html.ValidationMessageFor(s => s.Heading, "", new { @class = "text-danger" })
                        </div>
                        <div class="form-group">
                            @Html.LabelFor(u => u.Description, new { @class = "control-label" })
                            @Html.TextBoxFor(u => u.Description, new { @class = "form-control", placeholder = "Last name" })
                            @Html.ValidationMessageFor(s => s.Description, "", new { @class = "text-danger" })
                        </div>
                        <button type="submit" class="btn  mpbtn btn-block btn-sm btn-primary">Add Description</button>
                    }
                    @if (ViewBag.Status != null)
                    {
                        //Display the error message
                        @ViewBag.Status
                    }


                    @foreach (var description in ViewBag.DescriptionList)
                    {
                        <div class="row">
                            <div class="col-xs-2">@description.Heading</div><div class="col-xs-10">@description.Description</div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>

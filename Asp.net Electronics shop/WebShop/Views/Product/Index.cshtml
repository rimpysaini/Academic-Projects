@model IEnumerable<WebShop.Models.Product>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-lg-3">
            <div class="row top-buffer"></div>
            <div class="list-group">
                <!--Old code is in controller-->
                @Html.ActionLink("All Products", "AllProducts", "Product", null, new { @class = "list-group-item" })
                @foreach (var item in ViewBag.CategoryItems)
                {
                    string title = item.Name.ToString();
                    string titleAction = "Show";
                    @Html.ActionLink(title, titleAction, "Product", new { id = @item.Id.ToString() }, new { @class = "list-group-item" })
                }

            </div>
        </div>
        <!-- /.col-lg-3 -->
        <div class="col-lg-9">

            @foreach (var item in ViewBag.CategoryItems)
            {
                string title = item.Name.ToString();
                string titleAction = "Show";
                <div class="row top-buffer"></div>
                <div class="row white-bg">
                    <div class="col-md-7">
                        <a href="@Url.Action(titleAction, "Product", new { id = @item.Id.ToString() })">
                            <img height="150" width="150" class="img-fluid rounded mb-3 mb-md-0" src="~/Content/Images/category/@item.ImageUrl" alt="@item.Name">
                        </a>
                    </div>
                    <div class="col-md-5 text-center">
                        <div class="row">
                            <h1>@item.Name</h1>
                        </div>
                        <div class="row top-buffer-cat1">
                            <p>@item.Description</p>
                        </div>
                        <div class="row top-buffer-cat">
                            <a class="btn btn-primary" href="@Url.Action(titleAction, "Product", new { id = @item.Id.ToString() })">View @item.Name</a>
                        </div>

                    </div>

                </div>

            }

        </div>
        <!-- /.col-lg-9 -->
    </div>
    <!-- /.row -->
</div>
<!-- /.container -->
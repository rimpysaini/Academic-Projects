@model WebShop.Models.SupplierModel
@{
    ViewBag.Title = "Add Supplier";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="col-sm-12 text-center admin-header">
    <h3><b>Administration</b></h3>
</div>
<div class="row">
    <div class="col-md-3">
        @Html.Partial("_AdminPartial")
    </div>
    <div class="col-md-9">
        <div class="row mbox">
            <div class="mform">

                @using (Html.BeginForm("AddSupplier", "Supplier", FormMethod.Post, new { @class = "form", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    <div class="form-group">
                        @Html.LabelFor(s => s.Name, new { @class = "control-label" })
                        @Html.TextBoxFor(s => s.Name, new { @class = "form-control", placeholder = "Supplier name" })
                        @Html.ValidationMessageFor(s => s.Name, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(s => s.Address, new { @class = "control-label" })
                        @Html.TextBoxFor(s => s.Address, new { @class = "form-control", placeholder = "Supplier Address" })
                        @Html.ValidationMessageFor(s => s.Address, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(s => s.Phone, new { @class = "control-label" })
                        @Html.TextBoxFor(s => s.Phone, new { @class = "form-control", placeholder = "Supplier Phone" })
                        @Html.ValidationMessageFor(s => s.Phone, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(s => s.Email, new { @class = "control-label" })
                        @Html.TextBoxFor(s => s.Email, new { @class = "form-control", placeholder = "Supplier Email" })
                        @Html.ValidationMessageFor(s => s.Email, "", new { @class = "text-danger" })
                    </div>

                    <div><button type="submit" class="btn msbtn btn-block btn-sm btn-primary">Create</button></div>
                }
                @if (ViewBag.Status != null)
                {
                    //Display the error message
                    @ViewBag.Status
                }

            </div>
        </div>
    </div>
</div>


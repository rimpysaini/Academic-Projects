<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title - My ASP.NET Application</title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <script src="~/Scripts/jquery-1.8.0.min.js"></script>
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
</head>
<body>
    <div class="navbar navbar-inverse navbar-fixed-top">

        <div id="serachWidget" class="container search">
            <div class="col-md-4 pull-right">
                <form method="get" action="@Url.Action("Search", "Product")">
                    <div class="subscribe_outer_circle_search">
                        <input class="search_textbox" type="text" name="search" id="search" placeholder="Search" />
                    </div>
                    <button type="submit" class="subscribe_btn_bg_search" /><i class="fa fa-x4 fa-check"></i>
                </form>



            </div>
        </div>
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li>
                        <a href="@Url.Action("Index", "Home")">
                            <i class="hide visible-xs">Home</i>
                            <span class="fa fa-home hidden-xs"></span>
                        </a>
                    </li>
                    <li>@Html.ActionLink("Products", "Index", "Product")</li>
                    <li>@Html.ActionLink("Sale", "Sale", "Product")</li>
                    <li>@Html.ActionLink("FAQ", "Faq", "Home")</li>
                    <li>@Html.ActionLink("About us", "About", "Home")</li>
                    <li>@Html.ActionLink("Contact us", "Contact", "Home")</li>
                </ul>
                <ul class="nav navbar-nav navbar-right">
                    @RenderPage("LoginRegister.cshtml")
                </ul>
            </div>
        </div>
    </div>
    <main>
        <div class="container">
            @RenderBody()
        </div>
    </main>
    <footer>
        <div class="container">
            <div class="row mtop">
                <div class="col-md-4">
                    <section class="widget">
                        <div class="widget_title">
                            <span>Get in touch</span>
                        </div>
                    </section>
                    <div class="widget_text">
                        <a class="fa fa-facebook shape_circle light_border"></a>
                        <a class="fa fa-twitter shape_circle light_border"></a>
                        <a class="fa fa-google shape_circle light_border"></a>
                        <a class="fa fa-instagram shape_circle light_border"></a>
                    </div>
                </div>
                <div class="col-md-4">
                    <section class="widget">
                        <div class="widget_title">
                            <span>We accept</span>
                        </div>
                    </section>
                    <div class="widget_text">
                        <i class="fa pay fa-2x fa-cc-paypal"></i>
                        <i class="fa pay fa-2x fa-cc-amex"></i>
                        <i class="fa pay fa-2x fa-cc-mastercard"></i>
                        <i class="fa pay fa-2x fa-cc-visa"></i>
                    </div>
                </div>
                <div class="col-md-4">
                    <section class="widget">
                        <div class="widget_title">
                            <span>Account & Shipping info</span>
                        </div>
                    </section>
                    <div class="widget_text">
                        <ul>
                            <li><a href="#"><i class="fa fa-caret-right" aria-hidden="true"></i>&nbsp; Account</a></li>
                            <li><a href="#"><i class="fa fa-caret-right" aria-hidden="true"></i>&nbsp; Shipping Rates &amp; Policies</a></li>
                            <li><a href="#"><i class="fa fa-caret-right" aria-hidden="true"></i>&nbsp; Refunds &amp; Replacements</a></li>
                            <li><a href="#"><i class="fa fa-caret-right" aria-hidden="true"></i>&nbsp; Delivery Info</a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
        <div class="container">
            <div class="row">
                <div class="col-xs-8">
                    <!-- To be added -->
                </div>
                <div id="subscribe" class="col-xs-12 col-sm-6 col-md-4">
                    <div class="subscribe_outer_circle">
                        <input class="name_subscribe" type="text" name="name" placeholder="Your Name" />
                    </div>
                    <div class="subscribe_outer_circle">
                        <i class="fa fa-envelope-o inline"></i><input class="email_subscribe" type="email" name="email" placeholder="Your Email" />
                    </div>
                    <div>
                        <button class="subscribe_btn_bg" /><i class="fa fa-x4 fa-check"></i>
                    </div>
                </div>
            </div>
        </div>
        <div class="row-fluid">
            <div class="span12 text-center span">
                <span class="fa fa-sitemap">&nbsp;@Html.ActionLink("Sitemap", "Sitemap", "Home")</span>
            </div>
        </div>
    </footer>
    @Scripts.Render("~/bundles/jquery")
    @Scripts.Render("~/bundles/bootstrap")
    @Scripts.Render("~/bundles/jqueryval")
    @RenderSection("scripts", required: false)
</body>
</html>

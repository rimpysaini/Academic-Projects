@model WebShop.Models.UserModel
@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>
<div class="row mbox">
    <div class="mform">

        @using (Html.BeginForm("Login", "User", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.ValidationSummary(false, "", new { @class = "error" })
            <div class="form-group">
                <p>

                    @Html.LabelFor(u => u.Email, new { @class = "control-label" })
                    <div class=" col-md-10">
                        @Html.TextBoxFor(u => u.Email, new { @class = "form-control" })
                    </div>
                </p>
            </div>
            <div class="form-group">
                <p>

                    @Html.LabelFor(u => u.Password, new { @class = "control-label" })
                    <div class=" col-md-10">
                        @Html.PasswordFor(u => u.Password, new { @class = "form-control" })
                    </div>
                </p>
            </div>
            <p>
                <input id="Submit1" type="submit" value="Submit" class="btn-primary" />
                <input id="Reset1" type="reset" value="Clear" class="btn-primary" />
            </p>
        }

        @Html.ActionLink("Forgot Password?", "ForgotPassword", "User") area to provide additional information.</p>
        </div>
</div>
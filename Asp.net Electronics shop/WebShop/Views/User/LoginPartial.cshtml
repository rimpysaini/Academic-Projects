<div class="modal-header">
    <button type="button" class="close" data-dismiss="modal" aria-hidden="true"> &times; </button>
    <h3 class="modal-title-site text-center"> Login </h3>
</div>
<div class="modal-body">
    @using (Html.BeginForm("Login", "User", FormMethod.Post))
    {
        <div class="form-group login-username">
            <div>
                <input name="log" id="login-user" class="form-control input" size="20" placeholder="Enter Username" type="text">
            </div>
        </div>
        <div class="form-group login-password">
            <div>
                <input name="Password" id="login-password" class="form-control input" size="20" placeholder="Password" type="password">
            </div>
        </div>
            <div class="form-group">
                <div>
                    <div class="checkbox login-remember">
                        <label>
                            <input name="rememberme" value="forever" checked="checked" type="checkbox">
                            Remember Me
                        </label>
                    </div>
                </div>
            </div>
            <div>
                <div>
                    <input name="submit" class="btn  btn-block btn-sm btn-primary" value="Login" type="submit">
                </div>
            </div>
    }
</div>
<div class="modal-footer">
    <p class="text-center">
        <a href="#myModalSignup" data-backdrop="false" data-toggle="modal" data-dismiss="modal"> Sign Up. </a> <br>
        <a href="#myModalLostPassword" data-backdrop="false" data-toggle="modal" data-dismiss="modal"> Forgot your password? </a>
    </p>
</div>




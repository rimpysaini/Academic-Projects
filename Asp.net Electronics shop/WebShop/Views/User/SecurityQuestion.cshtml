@model WebShop.Models.UserModel
@{
    ViewBag.Title = "SecurityQuestion";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


@using (Html.BeginForm("SecurityQuestion", "User", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    <div class="form-group">
        <h1>Security Question</h1>
        <p>
            <button type="button" class="btn btn-default btn-sm">
                <span class="glyphicon glyphicon-question-sign"></span> Question
            </button>
            @ViewBag.Question
        </p>
        <label class="control-label col-sm-2" for="email">Your Answer</label>
        <div class=" col-md-10">
            @Html.PasswordFor(u => u.Answer, new { @class = "form-control" })
        </div>
    </div>

    <div class="form-group">
        <div class="col-sm-offset-2 col-sm-10">
            <button type="submit" class="btn-primary">Submit</button>
        </div>
    </div>
}

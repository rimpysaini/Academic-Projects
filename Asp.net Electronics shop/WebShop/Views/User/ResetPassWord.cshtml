@model WebShop.Models.UserModel
@{
    ViewBag.Title = "ResetPassWord";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>Please enter your new password.</h2>


@using (Html.BeginForm("ResetPassWord", "User", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    <div class="form-group">
        <p>
            @Html.LabelFor(u => u.Password, new { @class = "col-md-2 control-label" })
            <div class=" col-md-10">
                @Html.PasswordFor(u => u.Password, new { @class = "form-control" })
            </div>
        </p>
    </div>
    <div class="form-group">
        <p>
            @Html.LabelFor(u => u.ConfirmPassword, new { @class = "col-md-2 control-label" })
            <div class=" col-md-10">
                @Html.PasswordFor(u => u.ConfirmPassword, new { @class = "form-control" })
            </div>
        </p>
    </div>
    <p>
        <input id="Submit1" type="submit" value="Submit" class="btn-primary" />
    </p>
}
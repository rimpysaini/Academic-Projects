@model WebShop.Models.StaffModel
@{
    ViewBag.Title = "Add Staff";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<div class="col-sm-12 text-center admin-header">
    <h3><b>Administration</b></h3>
</div>
<div class="row">
    <div class="col-md-3">
        @Html.Partial("_AdminPartial")
    </div>
    <div class="col-md-9">
        <div class="row mbox">
            <div class="mform">

                @using (Html.BeginForm("AddStaff", "Staff", FormMethod.Post, new { @class = "form", role = "form" }))
                {
                    @Html.AntiForgeryToken()
                    <div class="form-group">
                        @Html.LabelFor(s => s.FirstName, new { @class = "control-label" })
                        @Html.TextBoxFor(s => s.FirstName, new { @class = "form-control", placeholder = "First name" })
                        @Html.ValidationMessageFor(s => s.FirstName, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(s => s.LastName, new { @class = "control-label" })
                        @Html.TextBoxFor(s => s.LastName, new { @class = "form-control", placeholder = "Surname" })
                        @Html.ValidationMessageFor(s => s.LastName, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(s => s.Email, new { @class = "control-label" })
                        @Html.TextBoxFor(s => s.Email, new { @class = "form-control", placeholder = "Email" })
                        @Html.ValidationMessageFor(s => s.Email, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(s => s.Password, new { @class = "control-label" })
                        @Html.TextBoxFor(s => s.Password, new { @class = "form-control", placeholder = "Password" })
                        @Html.ValidationMessageFor(s => s.Password, "", new { @class = "text-danger" })
                    </div>
                    <div class="form-group">
                        @Html.LabelFor(s => s.ComparePassword, new { @class = "control-label" })
                        @Html.TextBoxFor(s => s.ComparePassword, new { @class = "form-control", placeholder = "Retype password" })
                        @Html.ValidationMessageFor(s => s.ComparePassword, "", new { @class = "text-danger" })
                    </div>

                    <div><button type="submit" class="btn msbtn btn-block btn-sm btn-primary">Create</button></div>
                }
                @if (ViewBag.Status != null)
                {
                    //Display the error message
                    @ViewBag.Status
                }
            </div>
        </div>
    </div>
</div>

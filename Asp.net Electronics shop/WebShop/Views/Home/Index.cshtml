@{
    ViewBag.Title = "Home Page";
}
<div class="container">
<div id="myCarousel" class="carousel slide" data-ride="carousel">
    <!-- Indicators -->
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
    </ol>
    <!-- Wrapper for slides -->
    <div class="carousel-inner">
        <div class="item active">
            <img id="img1" src="~/Content/Images/hero_large.jpg" alt="Hero">
            <div class="carousel-caption">
                <div class="col-lg-5 col-md-6 padding-bottom-2x text-md-left text-left">
                    <div class="from-bottom">
                        <div class="fline">iPad Pro</div>
                        <div class="tline">for only <span class="text-bold">&nbsp;&euro;739.00</span></div>
                    </div><a class="btn btn-primary scale-up" href="shop-single.html">Shop Now</a>
                </div>
            </div>
        </div>
        <div class="item">
            <img id="img2" src="~/Content/Images/macbook_large.jpg" alt="MacBook">
            <div class="carousel-caption">
                <div class="col-lg-5 col-md-6 text-md-left text-left">
                    <div class="from-bottom">
                        <div class="fline">Samsung Tab S3</div>
                        <div class="tline">for only <span class="text-bold">&nbsp;&euro;515.00</span></div>
                    </div><a class="btn btn-primary scale-up" href="shop-single.html">Shop Now</a>
                </div>
            </div>
        </div>

        <div class="item">
            <img src="~/Content/Images/samsung_desktop.jpg" alt="Samsung">
            <div class="carousel-caption">
                <div class="col-lg-5 col-md-6 padding-bottom-2x text-md-left text-left">
                    <div class="from-bottom">
                        <div class="fline">Samsung</div>
                        <div class="sline">Galaxy Book</div>
                        <div class="tline">for only <span class="text-bold">&nbsp;&euro;515.00</span></div>
                    </div><a class="btn btn-primary scale-up" href="shop-single.html">Shop Now</a>
                </div>
            </div>
        </div>
    </div>
    <!-- Left and right controls -->
    <a class="left carousel-control" href="#myCarousel" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right"></span>
        <span class="sr-only">Next</span>
    </a>
</div>
